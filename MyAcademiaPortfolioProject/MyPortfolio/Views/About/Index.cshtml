@model List<MyPortfolio.Models.TblAbout> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Kullanici girisi icin Burada view in browse yapinca yetki yok hatasi veriyor 
    o yuzden login'in index den calistiricaz -->

<h2> Merhaba </h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Baslik</th>
        <th>Aciklama</th>
        <th>Sil</th>
        <th>Guncelle</th>
    </tr>

    <!-- CsHTML de C# Kodlari yazabilmek icin basina 'et' `asagida var` ekliyoruz -->
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.ImageUrl</td> 
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td> <a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Sil</a> </td>
            <td> <a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-info">Guncelle</a> </td>
        </tr>
    }


</table>

<br />

<a href="/About/AddAbout" class="btn btn-outline-dark">Yeni Hakkimda Girisi</a>