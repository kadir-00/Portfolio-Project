@model List<MyPortfolio.Models.TblCategories>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count=0;
}

<h3>Kategoriler Sayfasi</h3> 

<table class="table table-bordered table-hover"  >
    <tr>
        <th>#</th>
        <th>Kategori Adi</th>
        <th>Sil</th>
        <th>Guncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        count  ++;
        <tr>
            <td>@count</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">SIL</a></td>
            <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-info">Guncelleme</a></td>
        </tr>

    }

</table>
<br />
<a href="/Category/AddCategory" class="btn btn-outline-light">Yeni Kategori Ekle</a>

