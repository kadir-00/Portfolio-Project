@model List<MyPortfolio.Models.TblExperiences>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Baslangic Yili</th>
        <th>Bitis Yili</th>
        <th>Baslik</th>
        <th>Aciklama</th>
        <th>Sirket</th>
        <th>Lokasyon</th>
        <th>Sil</th>
        <th>Guncelle</th>
    </tr>

    <!-- CsHTML de C# Kodlari yazabilmek icin basina 'et' `asagida var` ekliyoruz -->
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ExperienceId</td>
            <td>@item.StartYear</td>
            <td>@item.EndYear</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Company</td>
            <td>@item.Location</td>
            <td> <a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-danger">Sil</a> </td>
            <td> <a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-outline-info">Guncelle</a> </td>
        </tr>
    }


</table> 

<br />

<a href="/Experience/AddExperience" class="btn btn-outline-dark">Yeni Deneyim Girisi</a>

