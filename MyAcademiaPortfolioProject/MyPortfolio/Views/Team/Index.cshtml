@model List<MyPortfolio.Models.TblTeams>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Team Indexi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>ImageUrl</th>
        <th>NameSurname</th>
        <th>Title</th>
        <th>Description</th>
        <th>TwitterUrl</th>
        <th>FacebookUrl</th>
        <th>LinkedinUrl</th>
        <th>InstagramUrl</th>
    </tr>

    <!-- CsHTML de C# Kodlari yazabilmek icin basina 'et' `asagida var` ekliyoruz -->
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TeamId</td>
            <td>@item.ImageUrl</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.TwitterUrl</td>
            <td>@item.FacebookUrl</td>
            <td>@item.LinkedinUrl</td>
            <td>@item.InstagramUrl</td>
            <td> <a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-danger">Sil</a> </td>
            <td> <a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-outline-info">Guncelle</a> </td>
        </tr>
    }


</table>

<br />

<a href="/Team/AddTeam" class="btn btn-outline-dark">Yeni Takim Arkadasi Girisi</a>

