@model List<MyPortfolio.Models.TblProjects>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count=0;
}



<h3>Projeler Sayfasi</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Proje Adi</th>
        <th>Kategori </th>
        <th>Github </th>
        <th>Sil</th>
        <th>Guncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        count ++;
        <tr>
            <td>@count</td>
            <td> <img src="@item.ImageUrl" style="height:50px ; width:50px"/> </td> <!-- resmi getirdik -->
            <td> @item.ProjectName </td>
            <td> @item.TblCategories.CategoryName </td>
            <td> <a href="@item.GitHubUrl" target="_blank">Github Linki</a> </td>
            <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-outline-danger">SIL</a></td>
            <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-outline-info">Guncelleme</a></td>
        </tr>

    }

</table>
<br />
<a href="/Project/AddProject" class="btn btn-outline-dark">Yeni Proje Ekle</a> 



