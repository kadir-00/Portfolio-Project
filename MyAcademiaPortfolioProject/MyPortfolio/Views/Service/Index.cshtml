@model List<MyPortfolio.Models.TblServices>
@{
    ViewBag.Title = "IndexService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>IndexService</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Icon</th>
        <th>Baslik</th>
        <th>Aciklama</th>
        <th>Sil</th>
        <th>Guncelle</th>
    </tr>

    <!-- CsHTML de C# Kodlari yazabilmek icin basina 'et' `asagida var` ekliyoruz -->
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServersId</td>
            <td>@item.Icon</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td> <a href="/Service/DeleteService/@item.ServersId" class="btn btn-outline-danger">Sil</a> </td>
            <td> <a href="/Service/UpdateService/@item.ServersId" class="btn btn-outline-info">Guncelle</a> </td>
        </tr>
    }


</table>

<br />

<a href="/Service/AddService" class="btn btn-outline-dark">Yeni Deneyim Girisi</a>

